<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/activity_main_layout_picture"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:background="#aadd">
        <ImageView
            android:id="@+id/activity_movie_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_layout_progressbar"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_main_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/activity_main_layout_picture"
        android:layout_toEndOf="@+id/activity_main_layout_picture"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginStart="20sp">

        <TextView
            android:id="@+id/activity_main_movieTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_main_movieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_main_movie_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_layout_summary"
        android:layout_below="@id/activity_main_layout_picture"
        android:layout_marginLeft="20sp"
        android:layout_marginStart="20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Summary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/activity_main_movie_summary"/>

    </LinearLayout>

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/activity_main_leftArrow"
        android:src="@mipmap/left_arrow"
        android:background="@drawable/arrow_background"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"/>
    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/activity_main_rightArrow"
        android:src="@mipmap/right_arrow"
        android:background="@drawable/arrow_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"/>
</RelativeLayout>
